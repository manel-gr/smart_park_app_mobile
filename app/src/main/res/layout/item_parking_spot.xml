<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/spotContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/carIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_car_top"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/spotNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_below="@id/carIcon"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/selectionIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selected_spot_background"
            android:visibility="gone"/>
    </RelativeLayout>
</FrameLayout>

